#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define fori(s,n) for(int i = s; i < n; ++i)
#define forj(s,n) for(int j = s; j < n; ++j)
#define bend(a) a.begin(), a.end()
#define aback(a,i) a[a.size()-i]

int main() {
    ios::sync_with_stdio(0); cin.tie(0);
    int t; cin >> t;
    while(t--){
        int n; cin >> n;
        if(n < 7 || n == 9){
            cout << "NO" << endl;
            continue;
        }
        cout << "YES" << endl;
        if(n % 3 == 0){
            cout << 1 << " " << 4 << " " << n-5 << endl;
        } else{
            cout << 1 << " " << 2 << " " << n-3 << endl;
        }
    }
}
